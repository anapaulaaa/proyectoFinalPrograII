# MySQL settings for local installation (XAMPP / system MySQL)
# If you run a local MySQL (XAMPP) use 127.0.0.1 and the credentials you create below.
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=game_db
MYSQL_USER=game_user
MYSQL_PASSWORD=game_pass

# Backend app env (connects to local MySQL)
# Use 127.0.0.1 for local MySQL (XAMPP) instead of a Docker service name
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=game_user
DB_PASSWORD=game_pass
DB_NAME=game_db
PORT=4000
